<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/vendorProductView.css">
    <title>Vendor Page</title>
</head>
<body>
    <nav></nav>

    <main>
        <div class="add-product-container">
            <div class="vendor-name"><h1>Vendor Name</h1></div>
            <button class="add-product-button">Add Product</button>
        </div>

        <div class="product-container">
            <% for (let i = 0; i < prod.length; i++) { %>
            <div class="card-container border">
                <div class="product-image">
                    <img src="images/<%= prod[i].image%>" alt="<%= prod[i].name %>">
                </div>

                <div class="product-detail">
                    <div class="product-name"><%= prod[i].name %></div>
                    <div class="price margin-bottom"><h4>$<%= prod.length %></h4></div>
                    <div class="edit-button-container">
                        <button class="edit-button">Edit</button>
                        <button class="edit-button">Delete</button>
                    </div>
                </div>
            </div>
            <% }; %>
        </div>
        
    </main>

    <footer></footer>
</body>
</html>