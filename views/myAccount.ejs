<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="/css/myAccount.css">
    <link rel="stylesheet" href="/css/footer.css" type="text/css">
    <link rel="stylesheet" href="/css/header.css" type="text/css">
    <script src ="../index.js"></script>
    <title>My Account Page</title>
</head>
<body>
    <%- include ('partials/header') %>
    <main>
        <h1>My Profile</h1>
        <div id ="content-box">
            <div id="picture-box">
                <div>
                    <img src="<%= user.profilePic%>" alt="User profile picture" width=250px id="profile-pic">
                </div>
                <button id="edit-picture-button" onclick="showUpload()">Edit profile picture</button>
                <form action="/myAccount" id="edit-profile-pic-box" style="display:none;" method="post" >
                    <input type="file" id="profile-pic-upload" accept="image" required onchange="getImage()">
                    <input type="text" id="encoded-pic" style="display:none" name="profilePic">
                    <button id="submit-profile-pic">Submit new profile pic</button>
                </form>
                
            </div>
            <div id="info-box">
                <label for="username">Username: <%= user.username %> </label>
                <% if (user.role == 'Customer') { %>
                <label for="name">Name: <%= user.customerName %> </label>
                <label for="address">Address: <%= user.customerAddress %></label>
                <% } %>
                <% if (user.role == 'Vendor') { %>
                    <label for="business-name">Business Name: <%= user.businessName %> </label>
                    <label for="business-address">Business Address: <%= user.businessAddress %></label>
                <% } %>
                <% if (user.role == 'Shipper') { %>
                    <label for="distribution-hub">Distribution Hub: <%= user.distributionHub %> </label>
                <% } %>
                <form action="/logout" method="get">
                    <button id="log-out-button">Log out</button>
                </form>
            </div>
        </div>
    </main>
    <%- include ('partials/footer') %>
</body>
<script>
    function showUpload() {
        if(document.getElementById("edit-profile-pic-box").style.display == 'none'){
            document.getElementById("edit-profile-pic-box").style.display='flex';
        } else{
            document.getElementById("edit-profile-pic-box").style.display='none';
        }
    }
    
    function getImage() {
        var fr = new FileReader();
        var img = document.querySelector("#profile-pic-upload").files;
        fr.readAsDataURL(img[0]);
        fr.onloadend = function () {
            console.log(fr.result);
            document.querySelector("#encoded-pic").value = fr.result;
        }
    }
</script>
</html>